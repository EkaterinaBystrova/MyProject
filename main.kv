#:kivy 2.1.0
WindowManager:
    Calendar:
    Cows:
    MilkYield:

<Calendar>:
    name: "calendar"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "События дня"
        MDLabel:
            id: text_input
            text: ""
        MDRaisedButton:
            id: datapiker
            text: "Ввести дату"
            on_release: app.show_date_picker()
        
        Button:
            text: 'к коровам'
            on_release: app.root.current = 'cows'
        Button:
            text: 'к удоям'
            on_release: app.root.current = "milkyield"

<Cows>:
    name:"cows"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Список коров"
        Button:
            text: 'к событиям'
            on_release: app.root.current = 'calendar'
        Button:
            text: 'к удоям'
            on_release: app.root.current = "milkyield"

<MilkYield>:
    name: "milkyield"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Удои молока"
        Button:
            text: 'к событиям'
            on_release: app.root.current = 'calendar'
        Button:
            text: 'к коровам'
            on_release: app.root.current = 'cows'
